def chatbot():
    print("Simple Chatbot: Type 'exit' to end the conversation.")
    while True:
        user_input = input("You: ").lower()
        
        if user_input in ["hi", "hello", "hey"]:
            print("Bot: Hello! How can I help you today?")
        elif "your name" in user_input:
            print("Bot: I am a simple rule-based chatbot.")
        elif "how are you" in user_input:
            print("Bot: I'm just a bot, but I'm functioning well! How about you?")
        elif "bye" in user_input or user_input == "exit":
            print("Bot: Goodbye! Have a great day!")
            break
        else:
            print("Bot: I'm sorry, I don't understand that.")

# Run the chatbot
chatbot()
